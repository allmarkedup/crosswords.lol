<%= tag.svg(
  "viewBox": view_box,
  class: "crossword",
  "x-data": "crossword({entries: #{entries.to_json}})",
  "@keyup.document": "handleInput(event.key)",
  "@keyboard-input.document": "handleInput(event.detail.key)",
  "@keyup.up.document": "handleNavigation",
  "@keyup.left.document": "handleNavigation",
  "@keyup.down.document": "handleNavigation",
  "@keyup.right.document": "handleNavigation",
  "@keyup.tab.document": "handleNavigation",
  "@keyup.backspace.document": "handleBackspace",
  "@keyboard-backspace.document": "handleBackspace",
  "x-trap": "true"
) do %>
  <%= tag.rect x: 0, y: 0, width: width, height: height, class: "crossword-background" %>

  <% cells.each do |cell| %>
    <%= cell %>
  <% end %>

  <% separators.each do |separator| %>
    <%= separator %>
  <% end %>
<% end %>
