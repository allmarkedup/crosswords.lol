<g
  class="crossword-cell"
  id="<%= id %>"
  x-data="crosswordCell(<%= {parentEntryIds: parent_entry_ids, solution:}.to_json %>)"
  :class="{active, highlighted, correct, incorrect}"
  >
  <%= tag.rect(
    x: x,
    y: y,
    width: size,
    height: size,
    class: "crossword-cell-background",
    "@click": "active = true",
  ) %>
  <% if number %>
    <%= tag.text(
      x: x + 2,
      y: y + number_text_height,
      class: "crossword-cell-number"
    ) do %>
      <%= number %>
    <% end %>
  <% end %>
  <%= tag.text(
    x: x + 15,
    y: y + 21,
    "text-anchor": "middle",
    class: "crossword-cell-text",
    "x-effect": "$el.textContent = text"
  ) %>
</g>