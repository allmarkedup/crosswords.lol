
<% content_for(:title) { "##{@crossword.id}" } %>

<% content_for :head do %>
  <script src="https://cdn.jsdelivr.net/npm/@tsparticles/confetti@3.8.1/tsparticles.confetti.bundle.min.js"></script>
<% end %>

<%=
  render PuzzleComponent.new(id: @crossword.id, date: @crossword.provider_published_on, entries: @crossword.entries) do |puzzle|
    puzzle.with_newer_link(href: quick_crossword_path(@next), disabled: @crossword == @latest)
    puzzle.with_older_link(href: quick_crossword_path(@previous))
    puzzle.with_random_link(href: quick_crossword_path(@random))

    puzzle.with_crossword(crossword: @crossword)

    puzzle.with_cluebar do |cluebar|
      @crossword.entries.each do |entry|
        cluebar.with_clue(**entry.slice(:id, :clue, :number, :direction))
      end
    end

    puzzle.with_keyboard
  end
%>