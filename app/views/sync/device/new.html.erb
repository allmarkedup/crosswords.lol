<% 
@page_title = "Sync your data with the cloud &nbsp;☁️✨"
%>

<% content_for :title do %>Sync your data<% end %>

<section>
  <div class="prose">
    <span>
      <p>Enable crossword data syncing with the cloud <span class="emoji">☁️</span> by entering your unique sync key below.</p>
    </span>
    <p class="highlight"><span><span class="emoji">🔑</span> <em>Don't have a sync key? <%= link_to tag.strong("Generate one now!"), new_sync_path %></em></span></p>
  </div>
</section>

<section>
  <%= form_with model: @account, url: sync_device_path, method: :post, class: "form" do |form| %>
    <%= form_errors(@account.errors) %>
    
    <div class="form-field">
      <%= form.label :key do %>
        Your sync key
      <% end %>
      <%= form.text_field :key, placeholder: "I.e. curious-german-jellyfish-farmer" %>
    </div>
    
    <div class="form-actions">
      <%= button "Enable syncing", icon: :arrow_down_up, type: :submit, theme: :primary %>
    </div>
  <% end %>
</section>

<footer class="prose centered">
  <p><em>Don't have a sync key? <%= link_to "Generate one now!", new_sync_path, "@click.prevent": "hijax" %></em></p>
  <p style="opacity: 0.7">&larr; <%= back_to_crosswords_link %></p>
</footer>
